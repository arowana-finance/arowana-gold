{
    "name": "arowana-gold",
    "version": "1.0.8",
    "description": "Bringing humanity's most trusted value on-chain backed by physical gold",
    "license": "MIT",
    "author": "Arowana Finance",
    "type": "module",
    "main": "./lib/index.cjs",
    "module": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "exports": {
        ".": {
            "import": "./lib/index.js",
            "require": "./lib/index.cjs",
            "default": "./lib/index.js"
        }
    },
    "keywords": [
        "arowana-finance",
        "solidity",
        "vitepress",
        "actions",
        "hardhat",
        "ethers"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arowana-finance/arowana-gold.git"
    },
    "scripts": {
        "hardhat": "cross-env NODE_OPTIONS=\"--loader ts-node/esm/transpile-only --no-warnings=ExperimentalWarning\" hardhat",
        "prettier": "prettier contracts/**/*.sol",
        "lint": "yarn prettier -c && eslint ignition/**/*.ts scripts/**/*.ts src/**/*.ts test/**/*.ts",
        "compile": "hardhat clean && hardhat compile && hardhat flatten:all && hardhat typechain:fix",
        "build": "tsc -p tsconfig.types.json --noEmit && rollup -c",
        "deploy": "yarn hardhat run --no-compile ./scripts/deploy.ts",
        "simulate": "node node_modules/@chainlink/functions-toolkit/dist/index.js simulate --bundle",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs",
        "test": "yarn hardhat test mocha --no-compile",
        "coverage": "hardhat clean && yarn hardhat coverage --solcoverjs ./.solcover.cjs && istanbul-badges-readme --colors=\"red:50,yellow:60\""
    },
    "dependencies": {
        "@nomicfoundation/hardhat-mocha": "^3.0.2",
        "@solidstate/hardhat-abi-exporter": "^3.0.0",
        "bcrypt": "^6.0.0",
        "ethers": "^6.15.0",
        "ethers-opt": "^1.0.7",
        "node-gyp": "^11.4.2"
    },
    "devDependencies": {
        "@arowanadao/eslint": "^1.0.8",
        "@arowanadao/rollup": "^1.0.8",
        "@chainlink/contracts": "^1.4.0",
        "@chainlink/functions-toolkit": "^0.3.2",
        "@nomicfoundation/hardhat-ethers": "^4.0.0",
        "@nomicfoundation/hardhat-ignition": "^3.0.0",
        "@nomicfoundation/hardhat-ignition-viem": "^3.0.0",
        "@nomicfoundation/hardhat-keystore": "^3.0.0",
        "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
        "@nomicfoundation/hardhat-node-test-runner": "^3.0.0",
        "@nomicfoundation/hardhat-toolbox": "^6.1.0",
        "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
        "@nomicfoundation/hardhat-typechain": "^3.0.0",
        "@nomicfoundation/hardhat-verify": "^3.0.0",
        "@nomicfoundation/hardhat-viem": "^3.0.0",
        "@nomicfoundation/hardhat-viem-assertions": "^3.0.0",
        "@openzeppelin/contracts": "^5.4.0",
        "@openzeppelin/contracts-upgradeable": "^5.4.0",
        "@types/chai": "^5.2.2",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.2.1",
        "@vitest/coverage-v8": "^3.2.4",
        "chai": "^5.2.1",
        "cross-env": "^10.0.0",
        "dotenv": "^17.2.1",
        "glob": "^11.0.3",
        "hardhat": "^3.0.0",
        "hardhat-contract-sizer": "^2.10.1",
        "hardhat-dependency-compiler": "1.2.1",
        "hardhat-gas-reporter": "2.3.0",
        "hardhat-preprocessor": "0.1.5",
        "idb": "^8.0.3",
        "istanbul-badges-readme": "^1.9.0",
        "logger-chain": "^1.0.3",
        "prettier-plugin-solidity": "^2.1.0",
        "solidity-coverage": "^0.8.16",
        "ts-node": "^10.9.2",
        "tsc": "^2.0.4",
        "tsx": "^4.20.3",
        "typescript": "^5.9.2",
        "viem": "^2.37.2",
        "vitepress": "^1.6.4",
        "vitest": "^3.2.4"
    },
    "resolutions": {
        "@types/minimatch": "5.1.2",
        "cookie": "^0.7.2",
        "fast-glob": ">=3.3.3",
        "prettier": "^3.6.2"
    }
}
